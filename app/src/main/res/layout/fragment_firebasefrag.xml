<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF00"
    tools:context=".firebasefrag">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#FFFFFF" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to: "
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#FFF000"
        android:text="Cloud Storage"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="25dp" />


    <Button
        android:id="@+id/btnfirebaseHist"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/ic_baseline_storage_24"
        android:clickable="true"
        app:backgroundTint = "@null"/>

    <LinearLayout
        android:id="@+id/roundRectangle1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/roundrectangle"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Enter Name"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/roundRectangle2"
        android:layout_width="300dp"
        android:layout_marginLeft="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/roundrectangle"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Enter Phone Number"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginLeft="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/roundrectangle"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Enter Relationship"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000" />
    </LinearLayout>


    <TextView
        android:id="@+id/welcometv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to: "
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_baseline_contacts_24" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/ic_baseline_local_phone_24" />

    <ImageView
        android:id="@+id/iv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:src="@drawable/ic_baseline_family_restroom_24" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/ic_baseline_delete_24"
        app:backgroundTint = "@null"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/ic_baseline_cloud_upload_24" />

    <Button
        android:id="@+id/btUpload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/ic_baseline_cloud_upload_24"
        app:backgroundTint="@null"/>


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="153dp"
        android:layout_height="113dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/xbck"/>


</RelativeLayout>