<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AED6F1 "
    tools:context=".localfrag">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/storagetop" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="50dp"
        android:text="Local Storage"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />



    <LinearLayout
        android:id="@+id/roundRectangle1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/roundrectangle"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Enter Name"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/roundRectangle2"
        android:layout_width="300dp"
        android:layout_marginLeft="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/roundrectangle"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PLease Enter Phone Number"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_baseline_contacts_24" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/ic_baseline_local_phone_24" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/ic_baseline_delete_24"
        app:backgroundTint = "@null"/>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="410dp"
        android:background="#333333"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:backgroundTint="@null" />


</RelativeLayout>