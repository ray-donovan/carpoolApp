<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF5733" /> <!-- Change to your desired color -->
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_baseline_sd_storage_24"
                android:gravity="center" />
        </layer-list>
    </item>

    <!-- Focused state (optional) -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF5733" /> <!-- Change to your desired color -->
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_baseline_sd_storage_24"
                android:gravity="center" />
        </layer-list>
    </item>

    <!-- Normal state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#333333" /> <!-- Black color -->
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_baseline_sd_storage_24"
                android:gravity="center" />
        </layer-list>
    </item>
</selector>