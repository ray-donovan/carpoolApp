<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#990000" />
            <corners android:radius="100dp" />
        </shape>
    </item>
    <!-- Middle border -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#CC0000" />
            <corners android:radius="100dp" />
        </shape>
    </item>
    <!-- Inner border -->
    <item android:left="20dp" android:right="20dp" android:top="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
            <corners android:radius="100dp" />
        </shape>
    </item>
</layer-list>