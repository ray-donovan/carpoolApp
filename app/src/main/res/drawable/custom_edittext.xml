<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2.3dp"
                android:color="@color/dark_moderate_blue" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <!-- Default-->
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/gray" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>
</selector>